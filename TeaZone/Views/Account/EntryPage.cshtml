@{
    Layout = "_AccountLayout";
}

@model string

<section class="vh-100">
    <form method="post">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="">
                                <h2 class="fw-bold mb-2">Авторизация</h2>
                                <br>
                                <br>

                                <div class="form-outline form-white mb-4 text-start">
                                    <label class="form-label text-start" for="typeEmailX">Введите email или логин</label>
                                    <input type="text" name="login" value="@Model.ToString()" class="form-control form-control-lg" />
                                    @if (ViewBag.Entry != null)
                                    {
                                        <label class="text-start" id="messageEntry" style="padding-top: 10px; color: red; font-size: 14px;">@ViewBag.Entry</label> 
                                    }
                                </div>

                                <div class="form-outline form-white text-start">
                                    <label class="form-label" for="typePasswordX">Введите пароль</label>
                                    <input type="password" name="password" class="form-control form-control-lg" />
                                </div>

                                <br>
                                <button class="btn btn-outline-light btn-lg px-5 my-4" type="submit">Войти</button>
                            </div>

                            <div>
                                <p class="mt-3">
                                    Еще нет аккаунта? <a asp-controller="Account" asp-action="RegistrationPage" class="text-white-50 fw-bold">Регистрация</a>
                                </p>
                            </div>

                            <div>
                                 <a asp-controller="Main" asp-action="HomePage" class="text-white-50 fw-bold">Главная страница</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

<script type="text/javascript">
    setTimeout(function () {
        if (document.getElementById('messageEntry') !== null)
            document.getElementById('messageEntry').style.display = 'none';
    }, 5000);
</script> 